<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/app_row_column_width"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:orientation="vertical"
    android:padding="0dp">

    <RelativeLayout
        android:layout_width="@dimen/app_icon_size"
        android:layout_height="@dimen/app_icon_size"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/appShareIndicator"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_send_white_18dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/appPinToTop"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_star_white_18dp"
            android:tint="@color/pin_to_top"
            android:visibility="gone" />
    </RelativeLayout>

    <TextView
        android:id="@+id/appLabel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_icon_label_height"
        android:layout_margin="0dp"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="2"
        android:padding="0dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1.2"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/app_icon_label_size" />
</LinearLayout>
